{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-prom-sync" data-bs-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa-solid fa-save"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i class="fa-solid fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
      <div class="alert alert-danger alert-dismissible">
        <i class="fa-solid fa-circle-exclamation"></i> {{ error_warning }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    {% endif %}
    {% if success %}
      <div class="alert alert-success alert-dismissible">
        <i class="fa-solid fa-check-circle"></i> {{ success }}
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    {% endif %}

    <div class="card">
      <div class="card-header"><i class="fa-solid fa-plug"></i> {{ text_edit }}</div>
      <div class="card-body">
        <form id="form-prom-sync" action="{{ save }}" method="post" data-oc-toggle="ajax">
          <ul class="nav nav-tabs mb-3">
            <li class="nav-item">
              <a href="#tab-general" data-bs-toggle="tab" class="nav-link active">{{ text_tab_general }}</a>
            </li>
            <li class="nav-item">
              <a href="#tab-import" data-bs-toggle="tab" class="nav-link">{{ text_tab_import }}</a>
            </li>
            <li class="nav-item">
              <a href="#tab-sync" data-bs-toggle="tab" class="nav-link">{{ text_tab_sync }}</a>
            </li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane fade show active" id="tab-general">
              <fieldset class="mb-4">
                <legend class="h6">{{ text_section_connection }}</legend>

                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">{{ entry_status }}</label>
                  <div class="col-sm-10">
                    <div class="form-check form-switch form-switch-lg">
                      <input type="hidden" name="module_prom_sync_status" value="0"/>
                      <input type="checkbox" name="module_prom_sync_status" value="1" id="input-status" class="form-check-input"{% if module_prom_sync_status %} checked{% endif %}/>
                    </div>
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="input-token" class="col-sm-2 col-form-label">{{ entry_token }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="module_prom_sync_token" value="{{ module_prom_sync_token }}" placeholder="{{ entry_token }}" id="input-token" class="form-control{% if error_token %} is-invalid{% endif %}"/>
                    <div id="error-token" class="invalid-feedback">{{ error_token }}</div>
                    <div class="form-text">{{ help_token }}</div>
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="input-domain" class="col-sm-2 col-form-label">{{ entry_domain }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="module_prom_sync_domain" value="{{ module_prom_sync_domain }}" placeholder="prom.ua" id="input-domain" class="form-control"/>
                    <div class="form-text">{{ help_domain }}</div>
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="input-language" class="col-sm-2 col-form-label">{{ entry_language }}</label>
                  <div class="col-sm-10">
                    <select name="module_prom_sync_language" id="input-language" class="form-select">
                      <option value="uk" {% if module_prom_sync_language == 'uk' %}selected="selected"{% endif %}>uk</option>
                      <option value="ru" {% if module_prom_sync_language == 'ru' %}selected="selected"{% endif %}>ru</option>
                      <option value="en" {% if module_prom_sync_language == 'en' %}selected="selected"{% endif %}>en</option>
                    </select>
                    <div class="form-text">{{ help_language }}</div>
                  </div>
                </div>
              </fieldset>
            </div>

            <div class="tab-pane fade" id="tab-import">
              <fieldset class="mb-4">
                <legend class="h6">{{ text_section_import }}</legend>

                <div class="row mb-3">
                  <label for="input-default-category" class="col-sm-2 col-form-label">{{ entry_default_category }}</label>
                  <div class="col-sm-10">
                    <input type="number" name="module_prom_sync_default_category_id" value="{{ module_prom_sync_default_category_id }}" placeholder="0" id="input-default-category" class="form-control" min="0" step="1"/>
                    <div class="form-text">{{ help_default_category }}</div>
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="input-limit" class="col-sm-2 col-form-label">{{ entry_limit }}</label>
                  <div class="col-sm-10">
                    <input type="number" name="module_prom_sync_limit" value="{{ module_prom_sync_limit }}" placeholder="50" id="input-limit" class="form-control" min="1" step="1"/>
                    <div class="form-text">{{ help_limit }}</div>
                  </div>
                </div>
              </fieldset>

              <fieldset class="mb-4">
                <legend class="h6">{{ text_section_mapping }}</legend>
                <div class="row">
                  <div class="col-lg-6">
                    <div class="row mb-3">
                      <label class="col-sm-7 col-form-label">{{ entry_map_name }}</label>
                      <div class="col-sm-5">
                        <div class="form-check form-switch">
                          <input type="hidden" name="module_prom_sync_map_name" value="0"/>
                          <input type="checkbox" name="module_prom_sync_map_name" value="1" id="input-map-name" class="form-check-input"{% if module_prom_sync_map_name %} checked{% endif %}/>
                        </div>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label class="col-sm-7 col-form-label">{{ entry_map_description }}</label>
                      <div class="col-sm-5">
                        <div class="form-check form-switch">
                          <input type="hidden" name="module_prom_sync_map_description" value="0"/>
                          <input type="checkbox" name="module_prom_sync_map_description" value="1" id="input-map-description" class="form-check-input"{% if module_prom_sync_map_description %} checked{% endif %}/>
                        </div>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label class="col-sm-7 col-form-label">{{ entry_map_price }}</label>
                      <div class="col-sm-5">
                        <div class="form-check form-switch">
                          <input type="hidden" name="module_prom_sync_map_price" value="0"/>
                          <input type="checkbox" name="module_prom_sync_map_price" value="1" id="input-map-price" class="form-check-input"{% if module_prom_sync_map_price %} checked{% endif %}/>
                        </div>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label class="col-sm-7 col-form-label">{{ entry_map_quantity }}</label>
                      <div class="col-sm-5">
                        <div class="form-check form-switch">
                          <input type="hidden" name="module_prom_sync_map_quantity" value="0"/>
                          <input type="checkbox" name="module_prom_sync_map_quantity" value="1" id="input-map-quantity" class="form-check-input"{% if module_prom_sync_map_quantity %} checked{% endif %}/>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="col-lg-6">
                    <div class="row mb-3">
                      <label class="col-sm-7 col-form-label">{{ entry_map_sku }}</label>
                      <div class="col-sm-5">
                        <div class="form-check form-switch">
                          <input type="hidden" name="module_prom_sync_map_sku" value="0"/>
                          <input type="checkbox" name="module_prom_sync_map_sku" value="1" id="input-map-sku" class="form-check-input"{% if module_prom_sync_map_sku %} checked{% endif %}/>
                        </div>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label class="col-sm-7 col-form-label">{{ entry_map_images }}</label>
                      <div class="col-sm-5">
                        <div class="form-check form-switch">
                          <input type="hidden" name="module_prom_sync_map_images" value="0"/>
                          <input type="checkbox" name="module_prom_sync_map_images" value="1" id="input-map-images" class="form-check-input"{% if module_prom_sync_map_images %} checked{% endif %}/>
                        </div>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label class="col-sm-7 col-form-label">{{ entry_map_groups }}</label>
                      <div class="col-sm-5">
                        <div class="form-check form-switch">
                          <input type="hidden" name="module_prom_sync_map_groups" value="0"/>
                          <input type="checkbox" name="module_prom_sync_map_groups" value="1" id="input-map-groups" class="form-check-input"{% if module_prom_sync_map_groups %} checked{% endif %}/>
                        </div>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label class="col-sm-7 col-form-label">{{ entry_create_categories }}</label>
                      <div class="col-sm-5">
                        <div class="form-check form-switch">
                          <input type="hidden" name="module_prom_sync_create_categories" value="0"/>
                          <input type="checkbox" name="module_prom_sync_create_categories" value="1" id="input-create-categories" class="form-check-input"{% if module_prom_sync_create_categories %} checked{% endif %}/>
                        </div>
                      </div>
                    </div>

                    <div class="row mb-3">
                      <label class="col-sm-7 col-form-label">{{ entry_update_existing }}</label>
                      <div class="col-sm-5">
                        <div class="form-check form-switch">
                          <input type="hidden" name="module_prom_sync_update_existing" value="0"/>
                          <input type="checkbox" name="module_prom_sync_update_existing" value="1" id="input-update-existing" class="form-check-input"{% if module_prom_sync_update_existing %} checked{% endif %}/>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </fieldset>

              <fieldset class="mb-2">
                <legend class="h6">{{ text_section_actions }}</legend>
                <p class="text-muted">{{ text_import_note }}</p>
                <button type="button" id="button-import" class="btn btn-outline-primary" data-import-url="{{ action_import_batch }}"><i class="fa-solid fa-download"></i> {{ button_import }}</button>
                <div id="import-progress" class="mt-3 d-none">
                  <div class="progress">
                    <div id="import-progress-bar" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%">0%</div>
                  </div>
                  <div id="import-progress-text" class="small text-muted mt-2">{{ text_import_progress }}: 0</div>
                </div>
                <div id="import-alert" class="alert alert-danger d-none mt-3"></div>
                <div id="import-success" class="alert alert-success d-none mt-3"></div>
              </fieldset>
            </div>

            <div class="tab-pane fade" id="tab-sync">
              <fieldset class="mb-4">
                <legend class="h6">{{ text_section_sync }}</legend>

                <div class="row mb-3">
                  <label class="col-sm-4 col-form-label">{{ entry_push_stock }}</label>
                  <div class="col-sm-8">
                    <div class="form-check form-switch">
                      <input type="hidden" name="module_prom_sync_push_stock" value="0"/>
                      <input type="checkbox" name="module_prom_sync_push_stock" value="1" id="input-push-stock" class="form-check-input"{% if module_prom_sync_push_stock %} checked{% endif %}/>
                    </div>
                  </div>
                </div>

                <div class="row mb-3">
                  <label class="col-sm-4 col-form-label">{{ entry_pull_orders }}</label>
                  <div class="col-sm-8">
                    <div class="form-check form-switch">
                      <input type="hidden" name="module_prom_sync_pull_orders" value="0"/>
                      <input type="checkbox" name="module_prom_sync_pull_orders" value="1" id="input-pull-orders" class="form-check-input"{% if module_prom_sync_pull_orders %} checked{% endif %}/>
                    </div>
                  </div>
                </div>

                <div class="row mb-3">
                  <label class="col-sm-4 col-form-label">{{ entry_match_by_sku }}</label>
                  <div class="col-sm-8">
                    <div class="form-check form-switch">
                      <input type="hidden" name="module_prom_sync_match_by_sku" value="0"/>
                      <input type="checkbox" name="module_prom_sync_match_by_sku" value="1" id="input-match-by-sku" class="form-check-input"{% if module_prom_sync_match_by_sku %} checked{% endif %}/>
                    </div>
                  </div>
                </div>
              </fieldset>

              <fieldset class="mb-2">
                <legend class="h6">{{ text_section_cron }}</legend>
                <p class="text-muted">{{ text_cron_note }}</p>

                <div class="row mb-3">
                  <label for="input-cron-key" class="col-sm-2 col-form-label">{{ entry_cron_key }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="module_prom_sync_cron_key" value="{{ module_prom_sync_cron_key }}" id="input-cron-key" class="form-control"/>
                    <div class="form-text">{{ help_cron_key }}</div>
                  </div>
                </div>

                <div class="row mb-3">
                  <label for="input-cron-url" class="col-sm-2 col-form-label">{{ entry_cron_url }}</label>
                  <div class="col-sm-10">
                    <div class="input-group">
                      <input type="text" value="{{ cron_url }}" id="input-cron-url" class="form-control" readonly="readonly"/>
                      <button type="button" id="button-copy-cron" data-bs-toggle="tooltip" title="{{ button_copy }}" class="btn btn-light"><i class="fa-regular fa-copy"></i></button>
                    </div>
                  </div>
                </div>
              </fieldset>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript"><!--
$('#button-copy-cron').on('click', function() {
    var copyText = document.getElementById('input-cron-url');

    copyText.select();
    copyText.setSelectionRange(0, 99999);

    navigator.clipboard.writeText(copyText.value);
});

(function() {
    var button = document.getElementById('button-import');
    if (!button) {
        return;
    }

    var progressWrap = document.getElementById('import-progress');
    var progressBar = document.getElementById('import-progress-bar');
    var progressText = document.getElementById('import-progress-text');
    var alertBox = document.getElementById('import-alert');
    var successBox = document.getElementById('import-success');
    var textProgress = '{{ text_import_progress }}';
    var textComplete = '{{ text_import_complete }}';
    var textError = '{{ text_import_error }}';

    function setMessage(el, message) {
        if (!el) {
            return;
        }
        if (message) {
            el.textContent = message;
            el.classList.remove('d-none');
        } else {
            el.classList.add('d-none');
        }
    }

    function setProgress(processed, total, done) {
        var percent = 0;
        if (total && total > 0) {
            percent = Math.min(100, Math.round((processed / total) * 100));
        } else if (done) {
            percent = 100;
        }

        progressBar.style.width = percent + '%';
        progressBar.textContent = (total && total > 0) ? percent + '%' : (done ? '100%' : '');

        if (done) {
            progressBar.classList.remove('progress-bar-animated');
        } else {
            progressBar.classList.add('progress-bar-striped', 'progress-bar-animated');
        }

        var text = textProgress + ': ' + processed;
        if (total && total > 0) {
            text += ' / ' + total;
        }
        progressText.textContent = text;
    }

    function runBatch(state) {
        var formData = new FormData();
        if (state.last_id !== null && state.last_id !== undefined && state.last_id !== '') {
            formData.append('last_id', state.last_id);
        }

        fetch(button.dataset.importUrl, {
            method: 'POST',
            body: formData,
            headers: { 'X-Requested-With': 'XMLHttpRequest' }
        })
        .then(function(response) { return response.json(); })
        .then(function(json) {
            if (json.error) {
                setMessage(alertBox, json.error || textError);
                button.disabled = false;
                progressBar.classList.remove('progress-bar-animated');
                return;
            }

            var batchProcessed = json.batch_processed;
            if (batchProcessed === undefined) {
                batchProcessed = (json.imported || 0) + (json.updated || 0) + (json.skipped || 0) + (json.errors || 0);
            }

            state.processed += batchProcessed;
            state.imported += json.imported || 0;
            state.updated += json.updated || 0;
            state.skipped += json.skipped || 0;
            state.errors += json.errors || 0;

            if (json.total && json.total > 0) {
                state.total = json.total;
            }

            state.last_id = (json.next_last_id !== undefined) ? json.next_last_id : null;

            setProgress(state.processed, state.total, json.done);

            if (json.done) {
                button.disabled = false;
                progressBar.classList.remove('progress-bar-animated');
                setMessage(successBox, textComplete + ' Imported: ' + state.imported + ', Updated: ' + state.updated + ', Skipped: ' + state.skipped + ', Errors: ' + state.errors);
            } else {
                runBatch(state);
            }
        })
        .catch(function() {
            setMessage(alertBox, textError);
            button.disabled = false;
            progressBar.classList.remove('progress-bar-animated');
        });
    }

    button.addEventListener('click', function() {
        if (button.disabled) {
            return;
        }

        button.disabled = true;
        setMessage(alertBox, '');
        setMessage(successBox, '');
        progressWrap.classList.remove('d-none');

        var state = {
            processed: 0,
            imported: 0,
            updated: 0,
            skipped: 0,
            errors: 0,
            total: 0,
            last_id: null
        };

        setProgress(0, 0, false);
        runBatch(state);
    });
})();
//--></script>
{{ footer }}
