<div id="content" class="prom-sync">
  <style type="text/css">
    .prom-sync .page-header { margin-bottom: 20px; }
    .prom-sync .btn-default { background: #f8f9fa; border-color: #e5e7eb; color: #374151; }
    .prom-sync .btn-default:hover { background: #f1f5f9; }
    .prom-sync .ps-card { background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; box-shadow: 0 1px 2px rgba(0,0,0,.04); }
    .prom-sync .ps-card-header { padding: 16px 20px; border-bottom: 1px solid #eef2f7; display: flex; align-items: center; gap: 8px; font-weight: 600; }
    .prom-sync .ps-card-body { padding: 20px; }
    .prom-sync .nav-tabs { border-bottom: 1px solid #e5e7eb; margin-bottom: 20px; }
    .prom-sync .nav-tabs > li > a { border: 0; border-bottom: 2px solid transparent; margin-right: 12px; color: #6b7280; }
    .prom-sync .nav-tabs > li.active > a,
    .prom-sync .nav-tabs > li.active > a:focus,
    .prom-sync .nav-tabs > li.active > a:hover { border: 0; border-bottom: 2px solid #0d6efd; color: #0d6efd; background: transparent; }
    .prom-sync .tab-content { padding-top: 4px; }
    .prom-sync .ps-section { background: #fafafa; border: 1px solid #edf2f7; border-radius: 10px; padding: 16px; margin-bottom: 20px; }
    .prom-sync .ps-section-title { font-weight: 600; margin: 0 0 12px; color: #111827; }
    .prom-sync .help-block { color: #6b7280; font-size: 12px; }
    .prom-sync .alert { border-radius: 8px; }
    .prom-sync .progress { height: 10px; border-radius: 999px; background: #e5e7eb; }
    .prom-sync .progress-bar { background: #0d6efd; }
    .prom-sync .ps-switch { position: relative; display: inline-block; width: 46px; height: 24px; vertical-align: middle; }
    .prom-sync .ps-switch input { opacity: 0; width: 0; height: 0; }
    .prom-sync .ps-slider { position: absolute; cursor: pointer; inset: 0; background: #d1d5db; transition: .2s; border-radius: 999px; }
    .prom-sync .ps-slider:before { position: absolute; content: ""; height: 18px; width: 18px; left: 3px; top: 3px; background: #fff; transition: .2s; border-radius: 50%; box-shadow: 0 1px 2px rgba(0,0,0,.2); }
    .prom-sync .ps-switch input:checked + .ps-slider { background: #0d6efd; }
    .prom-sync .ps-switch input:checked + .ps-slider:before { transform: translateX(22px); }
    .prom-sync .ps-switch-text { margin-left: 8px; color: #6b7280; font-size: 12px; }
    .prom-sync .ps-actions { display: flex; align-items: center; gap: 10px; flex-wrap: wrap; }
  </style>

