<script type="text/javascript"><!--
$('#button-copy-cron').on('click', function() {
    var copyText = document.getElementById('input-cron-url');

    copyText.select();
    copyText.setSelectionRange(0, 99999);

    try {
        document.execCommand('copy');
    } catch (e) {}
});

$('#button-copy-cron-inventory').on('click', function() {
    var copyText = document.getElementById('input-cron-url-inventory');

    copyText.select();
    copyText.setSelectionRange(0, 99999);

    try {
        document.execCommand('copy');
    } catch (e) {}
});

$('#button-fix-seo').on('click', function() {
    var btn = $(this);
    if (!confirm('This will update SEO URLs for ALL imported products. Continue?')) return;
    
    btn.button('loading');
    $.ajax({
        url: '{{ fix_seo_url|replace({'&amp;': '&'}) }}',
        dataType: 'json',
        success: function(json) {
            btn.button('reset');
            if (json['success']) {
                alert(json['message']);
                location.reload();
            } else if (json['error']) {
                alert(json['error']);
            }
        },
        error: function() {
            btn.button('reset');
            alert('Error communicating with server.');
        }
    });
});

(function() {
    var button = $('#button-import');
    if (!button.length) {
        return;
    }

    var progressWrap = $('#import-progress');
    var progressBarWrap = $('#import-progress-bar-wrap');
    var progressBar = $('#import-progress-bar');
    var progressText = $('#import-progress-text');
    var alertBox = $('#import-alert');
    var successBox = $('#import-success');
    var textProgress = '{{ text_import_progress }}';
    var textComplete = '{{ text_import_complete }}';
    var textError = '{{ text_import_error }}';

    function setMessage(el, message) {
        if (!el || !el.length) {
            return;
        }
        if (message) {
            el.text(message).removeClass('hidden');
        } else {
            el.addClass('hidden');
        }
    }

    function setProgress(processed, total, done) {
        var percent = 0;
        if (total && total > 0) {
            percent = Math.min(100, Math.round((processed / total) * 100));
        } else if (done) {
            percent = 100;
        }

        progressBar.css('width', percent + '%');
        progressBar.text((total && total > 0) ? (percent + '%') : (done ? '100%' : ''));

        if (done) {
            progressBarWrap.removeClass('active progress-striped');
        } else {
            progressBarWrap.addClass('progress-striped active');
        }

        var text = textProgress + ': ' + processed;
        if (total && total > 0) {
            text += ' / ' + total;
        }
        progressText.text(text);
    }

    function runBatch(state) {
        var data = {};
        if (state.last_id !== null && state.last_id !== undefined && state.last_id !== '') {
            data.last_id = state.last_id;
        }

        $.ajax({
            url: button.data('importUrl'),
            type: 'post',
            data: data,
            dataType: 'json'
        }).done(function(json) {
            if (json.error) {
                setMessage(alertBox, json.error || textError);
                button.prop('disabled', false);
                progressBarWrap.removeClass('active');
                return;
            }

            var batchProcessed = json.batch_processed;
            if (batchProcessed === undefined) {
                batchProcessed = (json.imported || 0) + (json.updated || 0) + (json.skipped || 0) + (json.errors || 0);
            }

            state.processed += batchProcessed;
            state.imported += json.imported || 0;
            state.updated += json.updated || 0;
            state.skipped += json.skipped || 0;
            state.errors += json.errors || 0;

            if (json.total && json.total > 0) {
                state.total = json.total;
            }

            state.last_id = (json.next_last_id !== undefined) ? json.next_last_id : null;

            setProgress(state.processed, state.total, json.done);

            if (json.done) {
                button.prop('disabled', false);
                progressBarWrap.removeClass('active');
                setMessage(successBox, textComplete + ' Imported: ' + state.imported + ', Updated: ' + state.updated + ', Skipped: ' + state.skipped + ', Errors: ' + state.errors);
            } else {
                runBatch(state);
            }
        }).fail(function() {
            setMessage(alertBox, textError);
            button.prop('disabled', false);
            progressBarWrap.removeClass('active');
        });
    }

    button.on('click', function() {
        if (button.prop('disabled')) {
            return;
        }

        button.prop('disabled', true);
        setMessage(alertBox, '');
        setMessage(successBox, '');
        progressWrap.removeClass('hidden');

        var state = {
            processed: 0,
            imported: 0,
            updated: 0,
            skipped: 0,
            errors: 0,
            total: 0,
            last_id: null
        };

        setProgress(0, 0, false);
        runBatch(state);
    });
})();
